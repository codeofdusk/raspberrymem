DEVOPT=$(dialog --stdout --menu "choose a developer option - warning - this is for developers and beta testers ONLY" 50 50 1 1 "check out a different branch")
if [ "$DEVOPT" == "1" ]
then
BRANCHSEL=$(dialog --stdout --menu "$(gettext -s branchselprompt)" 50 50 2 1 "$(gettext -s release)" 2 "$(gettext -s trunk)" )
if [ "$BRANCHSEL" == "1" ]
then
bzr switch -b release
fi
if [ "$BRANCHSEL" == "2" ]
then
bzr switch -b trunk
fi
fi

