#write what we want to do to a shell script for better reliability
echo "rm -rf $raspberrymem_location" > /tmp/switchbranch
echo "bzr checkout $1 $raspberrymem_location" >> /tmp/switchbranch
echo "cd $raspberrymem_location" >> /tmp/switchbranch
echo "rm -rf /etc/raspberrymem.prefs" >> /tmp/switchbranch
echo "exec ./ui" >> /tmp/switchbranch
chmod +x /tmp/switchbranch
exec /tmp/switchbranch
