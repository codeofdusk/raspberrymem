SEL=$(dialog --stdout --menu "select an option to modify it's value." 50 50 1 1 "set server host")
if [ "$SEL" == "1" ]
then
dialog --stdout --inputbox "enter the hostname or IP address of the raspberrymem server to register to : " 50 50 > /etc/raspberrymem.prefs/server_host
echo "registering, please wait."
./register
fi
